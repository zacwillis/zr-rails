<div class="container" style="margin-top: 40px;">
  <div class="row">
    <div class="col-md-6">
      <h2 style="margin-bottom: 0px;" class="recipe-show-name"><%= @recipe[:name] %></h2>
      <hr style="margin-top: 8px;">
      <br>

      <h5>Ingredients</h5>


      <% if @recipe[:ingredients] %>
        <% @recipe[:ingredients].each do |ing| %>
          <li style="text-indent: 20px;"><%= ing.name %> - <%= ing.quantity %></li>
        <% end %>
      <% end %>

      <hr>
      <br>

      <h4>Instructions</h4>

      <% if @recipe[:instructions] %>
        <% @recipe[:instructions].each do |inst| %>
          <p style="text-indent: 20px;"><%= inst.step %>.&nbsp;&nbsp; <%= inst.description %></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div>
        <%= image_tag @recipe[:image_url], width: '100%', height: '100%' %>
      </div>
      <div style="margin-top: 10px;">
        <%= button_to "Back To Recipes", recipes_path, method: :get, class: "btn btn-dark btn-sm", style: "float: left" %>
        <%= button_to "Edit Recipe", edit_recipe_path(@recipe), method: :get, class: 'btn btn-warning btn-sm edit-btn' %>
        <%= link_to "Delete Recipe", @recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger btn-sm edit-btn' %>
      </div>
    </div>
  </div>
</div>
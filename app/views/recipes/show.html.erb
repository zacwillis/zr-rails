<div class="container" style="margin-top: 40px;">
  <div class="row">
    <div class="col-lg-6">
      <h2 style="margin-bottom: 0px;" class="recipe-show-name"><%= @recipe[:name] %></h2>
      <hr style="margin-top: 8px;">
      <br>

      <h4>Ingredients</h4>


      <% if @recipe[:ingredients] %>
        <% for @ingredient in @recipe[:ingredients] %>
          <ul>
            <li><%= @ingredient.name %> - <%= @ingredient.quantity %></li>
          </ul>
        <% end %>
      <% end %>

      <hr>
      <br>

      <h4>Instructions</h4>

      <% if @recipe[:instructions] %>
        <% for @instruction in @recipe[:instructions] %>
          <ul style="list-style-type:none; padding-left: 20px !important; list-style-position: outside;">
            <li><%= @instruction.step %>.&nbsp; <%= @instruction.description %></li>
          </ul>
        <% end %>
      <% end %>
    </div>
    <div class="col-lg-6">
      <% if @recipe[:image_url] %>
        <div>
          <%= image_tag @recipe[:image_url].to_s, width: '100%', height: '100%' %>
        </div>
      <% end %>
      <div style="margin-top: 10px;">
        <%= button_to "Back To Recipes", recipes_path, method: :get, class: "btn btn-dark btn-sm", style: "float: left" %>
        <%= button_to "Edit Recipe", edit_recipe_path(@recipe), method: :get, class: 'btn btn-warning btn-sm edit-btn' if logged_in?(:admin) %>
        <%= link_to "Delete Recipe", @recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: 'btn btn-danger btn-sm edit-btn' if logged_in?(:admin) %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @recipe[:name] %></h1>

      <hr>

      <h4>Ingredients</h4>

      <% @recipe[:ingredients].each do |ing| %>
        <p><%= ing.name %></p> - <%= ing.quantity %>
      <% end %>

      <hr>

      <h4>Instructions</h4>

      <% @recipe[:instructions].each do |inst| %>
        <p><%= inst.step %></p> - <%= inst.description %>
      <% end %>

      
    </div>
    <div class="col-md-6">
      <h2><%= @recipe[:image_url] %></h2>
    </div>
  </div>
  <!-- Add edit info -->
</div>
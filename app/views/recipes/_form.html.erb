<%= form_with(model: @recipe, local: true) do |form| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control', placeholder: "Enter recipe name" %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary btn-sm">
          Upload Image <%= form.file_field :image_url, style: 'display:none;' %>
        </label>
      </div>
    </div>
  </div>

  <div class="row col-lg-12">
    <div class="col-lg-6">
      <div>
        <%= form.fields_for :ingredients do |ing| %>
          <%= render 'ingredient_fields', f: ing %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Ingredient', form, :ingredients, class: "btn btn-success btn-sm" %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div>
        <%= form.fields_for :instructions do |inst| %>
          <%= render 'instruction_fields', f: inst %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Instruction', form, :instructions, class: "btn btn-success btn-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions" style="margin-top: 20px;">
    <%= form.submit 'Save Recipe', class: 'btn btn-primary btn-block'  %>
  </div>
<% end %>